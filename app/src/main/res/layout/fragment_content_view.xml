<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.cheez.cheez.ContentViewActivity$PlaceholderFragment">
    <co.cheez.cheez.ImageWebView
        android:id="@+id/wv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <!--<SurfaceView-->
        <!--android:id="@+id/vv_main"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="gone"-->

        <!--/>-->

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scaleType="centerCrop" />


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"

        />
    <LinearLayout
        android:id="@+id/content_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:text="제목"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/subtitle"
            android:text="부제목"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_link"
            style="?android:borderlessButtonStyle"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="보러가기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:background="@drawable/btn_background"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal">
            <co.cheez.cheez.IconButton
                android:visibility="gone"
                android:id="@+id/btn_hate"
                android:text="{fa-times-circle}"
                style="?android:borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"/>
            <co.cheez.cheez.IconButton
                android:id="@+id/btn_like"
                android:text="{fa-heart}"
                style="?android:borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:src="@drawable/logo"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"/>
        <co.cheez.cheez.IconButton
            style="?android:borderlessButtonStyle"
            android:id="@+id/btn_send_mail"
            android:layout_marginTop="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:text="{fa-envelope}"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp">
        <ImageButton
            android:id="@+id/btn_share"
            style="?android:borderlessButtonStyle"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:src="@drawable/share_24"/>
        <com.facebook.share.widget.ShareButton
            android:id="@+id/btn_share_facebook"
            style="?android:borderlessButtonStyle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/facebook_24"
            android:paddingLeft="24dp"
            />
        <ImageButton
            android:id="@+id/btn_share_kakaotalk"
            style="?android:borderlessButtonStyle"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:src="@drawable/kakaotalk_24"/>

    </LinearLayout>


    <co.cheez.cheez.IconTextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="{fa-chevron-left}"
        android:textColor="#aaffffff"
        android:layout_alignBottom="@+id/content_wrap"
        android:gravity="center"
        />
    <co.cheez.cheez.IconTextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="{fa-chevron-right}"
        android:layout_alignParentRight="true"
        android:textColor="#aaffffff"
        android:layout_alignBottom="@+id/content_wrap"
        android:gravity="center"
        />
</RelativeLayout>
